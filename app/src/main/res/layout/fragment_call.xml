<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/torch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/torch"
        android:tint="@color/primaryDark"
        app:fabSize="mini"
        app:backgroundTint="@color/activable_fab_background"
        app:borderWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/video"
        />

    <FrameLayout
        android:id="@+id/zoom_layout"
        android:layout_width="48dp"
        android:layout_height="160dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/torch"
        app:layout_constraintEnd_toEndOf="@+id/torch"
        app:layout_constraintTop_toBottomOf="@+id/torch"
        >

        <SeekBar
            android:id="@+id/zoom"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:rotation="270"
            android:thumb="@drawable/zoom_thumb"
            android:max="3"
            tools:progress="2"
            />

    </FrameLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/hangup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:src="@drawable/hangup"
        android:tint="@color/primaryDark"
        app:fabSize="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>
